<div class="container-fluid margin">
  <div class="articles">
    <div class="row">
      <div style="
      padding-right: 35px;" class="col-md-9">
        <% @posts.each do |post| %>
          <article class="article-container">
            <div class="article-card">
               <h1>
                 <%= link_to "#{post.title}", post, class: "post-title" %>
               </h1>
               <div class="article-time"><%= post.created_at.to_date.strftime("%d %B %Y") %></div>
              <div class="card-body"><%= (strip_tags(markdown(post.content)).truncate_words(55, omission: '... (continued)')) %></div>
              <%= link_to "Czytaj wiÄ™cej", post, class: "read-more" %>
            </div>
            <img class="article-image" src="<%= post.cover_url(:thumbnail) %>">
          </article>
        <% end %>
      </div>
      <div class="col-md-3 sidebar">
        <%= render"shared/about_me" %>
        <%= render"shared/badges" %>
        <%= render"shared/instagram_feed" %>
        <%= render"shared/facebook" %>
      </div>
    </div>
  </div>
</div>
